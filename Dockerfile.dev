
FROM php:8.3.20-fpm-alpine

# Installer les dépendances Alpine + extensions PHP
RUN apk add --no-cache \
        libpng-dev \
        libjpeg-turbo-dev \
        freetype-dev \
        oniguruma-dev \
        libxml2-dev \
        nginx \
        && docker-php-ext-configure gd --with-freetype --with-jpeg \
        && docker-php-ext-install -j$(nproc) gd pdo pdo_mysql

# Installer Composer depuis l'image officielle
COPY --from=composer:latest /usr/bin/composer /usr/bin/composer

# Créer dossier logs Nginx
RUN mkdir -p /run/nginx

WORKDIR /var/www/html
COPY . .

# Copier la config Nginx spécifique
COPY nginx/nginx.dev.conf /etc/nginx/nginx.conf

# Exposer le port
EXPOSE 80

# Version simplifiée qui marche à coup sûr
CMD ["sh", "-c", "php-fpm -D && exec nginx -g 'daemon off;'"]